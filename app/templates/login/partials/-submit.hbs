                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-12">
                                {{input id='username' valueBinding='username' type="text"  placeholder='Username' class='form-control'}}
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-8">
                                {{input id='password' valueBinding='password' type="password"  placeholder='Password' class='form-control'}}
                            </div>
                            <div class="col-lg-4">
                                <button type="button" class="btn btn-group-justified btn-primary pull-right" {{action 'login'}}>Login</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3"></div>
                </div>

<div class="row" style="margin-bottom: 15px">
    <div class="col-lg-3"><h4>Default revenue</h4></div>
    <div class="col-lg-5">
        <div class="input-group input-group">
            {{input value= controller.item_record.originalRevenue type='number' placeholder='Enter default value' class='form-control'}}
            <span class="input-group-addon " id="1">
                {{controller.item_record.originalCostCurrency}}
            </span>
        </div>
    </div>
    {{#if controller.is_chargeItems_book}}
        <div class="col-lg-4">
            <div class="input-group input-group">
                <span class="input-group-addon " id="1">NUM</span>
                {{input value= controller.item_record.num type='number' class='form-control'}}
            </div>
        </div>
    {{else}}
        {{#if controller.item_record.isMultiplierNum}}
            <div class="col-lg-2">
                {{view Ember.Select content=controller.per_list value=controller.item_record.multiplier class='form-control'}}
            </div>
            <div class="col-lg-2">
                {{input type='number' value= controller.item_record.num class='form-control'}}
            </div>
        {{else}}
            <div class="col-lg-4">
                {{view Ember.Select content=controller.per_list value=controller.item_record.multiplier class='form-control'}}
            </div>
        {{/if}}
    {{/if}}
</div>
<div class="row">
    <div class="col-lg-12">
        <h5 class="page-header"></h5>
        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "save_record" controller.item_record 'itemNewActive' false}}>Save</button>
    </div>
</div>



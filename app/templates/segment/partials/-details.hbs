<div class="row" style="margin-top: 40px; margin-bottom: 25px; margin-left: 25px;">
    <div class="col-lg-12">
        <div class="row" style="margin-bottom: 15px;">
            <div class="col-lg-3"><h4>Name</h4></div>
            <div class="col-lg-7">
                <div class="input-group input-group">
                    {{input value= name placeholder='Enter name' class='form-control' disabled= controller.isView}}
                    <span class="input-group-addon " id="1">
                <span class="glyphicon glyphicon-asterisk"></span>
            </span>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="row" style="margin-bottom: 15px;">
            <div class="col-lg-3"><h4>Origin</h4></div>
            <div class="col-lg-7">
                {{#if controller.isView}}
                    {{input value= origin.name class='form-control' disabled= controller.isView}}
                {{else}}
                    <!--<a id="autocomplete-origin">-->
                    {{select-2
                    content= app_controller.autocompletePoiPort
                    value= origin
                    optionLabelPath="name"
                    placeholder="Choose a port"
                    typeaheadNoMatchesText="No port found for '%@'"
                    typeaheadErrorText="Loading failed: %@"
                    enabled=true
                    allowClear=true}}
                        {{!{{auto-complete source=app_controller.autocompletePoiPort destination=origin searchPath="name" minChars=2}}
                    <!--</a>-->
                {{/if}}

            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="row" style="margin-bottom: 15px;">
            <div class="col-lg-3"><h4>Destination</h4></div>
            <div class="col-lg-7">
                {{#if controller.isView}}
                    {{input value= destination.name class='form-control' disabled= controller.isView}}
                {{else}}
                    <!--<a id="autocomplete-destination">-->
                    {{select-2
                    content= app_controller.autocompletePoiPort
                    value= destination
                    optionLabelPath="name"
                    placeholder="Choose a port"
                    typeaheadNoMatchesText="No port found for '%@'"
                    typeaheadErrorText="Loading failed: %@"
                    enabled=true
                    allowClear=true}}
                        {{!{{auto-complete source=app_controller.autocompletePoiPort destination=destination searchPath="name" minChars=2}}
                    <!--</a>-->
                {{/if}}
            </div>
            <div class="col-lg-2"></div>
        </div>
        {{#if canEdit}}
            <div class="row">
                <div class="col-lg-10">
                    <h5 class="page-header"></h5>
                    {{#if controller.isView}}
                        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "change_state" false}}>Edit</button>
                    {{else}}
                        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "change_state" true this}}>Save</button>
                    {{/if}}
                </div>
                <div class="col-lg-2"></div>
            </div>
        {{/if}}
    </div>
</div>
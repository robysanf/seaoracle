<!-- **********************************************
        NEW ITEM
-->
{{#if controller.itemListActive}}
    <div class="row">
        {{partial "booking/partials/bb/-item-new"}}
    </div>
{{else}}


    <!-- **********************************************
            ITEM LIST
    -->
    <div class="row">
        <div class="col-lg-8">
            <h3 class="page-header">List-view</h3>
        </div>
        <div class="col-lg-4">
            <br>
            <br>

            <!--  ******* HEAD ********  -->

            <!--azioni diverse per stati diversi-->
            {{#if controller.is_client}}
                {{#if isRequest}}
                {{!{{#inArray App.grantsValue "access/booking/new"}}
                    <div class="col-lg-12">
                        <button type="button" class="btn btn-primary btn-130 pull-right" {{action "createRecord_item" "item" "bb" null this true}}>
                            <span class="glyphicon glyphbutton glyphicon-plus-sign"></span> Add item
                        </button>
                    </div>
                {{!{{/inArray}}
                {{/if}}
            {{else}}
                {{#if isEditing}}
                    <div class="col-lg-6 ">
                        <button type="button" class="btn btn-default btn-130 pull-right" {{action "open_modal" 'booking.modals.loaded-on' this}}>
                            Loaded On
                        </button>
                    </div>
                    <div class="col-lg-6 ">
                        {{!{{#inArray App.grantsValue "access/booking/new"}}
                        <button type="button" class="btn btn-primary btn-130 pull-right" {{action "createRecord_item" "item" "bb" null this true}}>
                            <span class="glyphicon glyphbutton glyphicon-plus-sign"></span> Add item
                        </button>
                        {{!{{/inArray}}
                    </div>
                {{/if}}
                {{#if isLocked}}
                    {{#if is_shipowner}}
                        <button type="button" class="btn btn-info btn-130 pull-right" {{action "open_modal" 'booking.modals.delay' null null}}>
                            <span class="glyphicon glyphbutton glyphicon-backward"></span> Delay
                        </button>
                    {{/if}}
                    {{#if is_admin}}
                        <button type="button" class="btn btn-info btn-130 pull-right" {{action "open_modal" 'booking.modals.delay' null null}}{{!{{action "openview_modal" "bb" null "modalDelay" id}}>
                            <span class="glyphicon glyphbutton glyphicon-backward"></span> Delay
                        </button>
                    {{/if}}
                {{/if}}
            {{/if}}
        </div>
    </div>

    <!--  ******* BODY ********  -->

    <div class="row">
        <div class="col-lg-12">
            <!--table con lista dei container-->
            {{partial "booking/partials/bb/-item-list"}}
        </div>
    </div>
{{/if}}
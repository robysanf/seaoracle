<!-- ADMIN -->
{{#if controller.is_admin}}
    <h5 class="page-header"></h5>
    <div class="row">
        <div class="col-lg-12">
            <button type="button" style="text-align: left" class="btn btn-info btn-group-justified" {{action "changeState" "pending" id}}>
                Back to Pend.
            </button>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12">
            {{#if isAccept}}
                <button type="button" style="text-align: left" class="btn btn-primary btn-group-justified " {{action "changeState_and_share" id "lock" client 'edit'}}>
                    <span class="glyphicon glyphlink glyphicon-check"  style="color: aliceblue"></span> Lock
                </button>
            {{/if}}
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <button type="button" style="text-align: left" class="btn btn-default btn-group-justified" {{action "shareResource" id 'modalShareResource'}}>
                Share
            </button>
        </div>
    </div>
{{/if}}


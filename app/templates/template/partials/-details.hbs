<div class="row" style="margin-top: 40px; margin-bottom: 25px; margin-left: 25px;">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-3"><h4>Name</h4></div>
            <div class="col-lg-9">
                <div class="form-group">
                    {{input id='name' value= name placeholder='Enter name' class='form-control' disabled=controller.isView}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3"><h4>Path</h4></div>
            {{#if controller.isView}}
                {{#each poi in paths}}
                    <div class="col-lg-3"><h4></h4></div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            {{input value= poi.name class='form-control' disabled=controller.isView}}
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="col-lg-3"><h4></h4></div>
                {{#view "sortable" type='edit'}}
                    <div class="col-lg-9">
                        <div class="sortable" style="cursor: pointer">
                            {{#each poi in paths itemViewClass="Em.View"}}
                                <ul class="list-group">
                                    <li class="list-group-item" data-id="{{unbound poi.id}}" data-value="{{unbound view.contentIndex}}">
                                        <span class="glyphicon glyphicon-sort pull-left" style="color: #428bca; width: 10%"></span>
                                        <strong>{{poi.name}}</strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" {{action "remove_element" view.contentIndex}}>&times;</button>
                                    </li>
                                </ul>
                            {{/each}}
                        </div>
                    </div>
                {{/view}}
            {{/if}}
        </div>

        {{#if canEdit}}
            <div class="row">
                <div class="col-lg-12">
                    <h5 class="page-header"></h5>
                    {{#if controller.isView}}
                        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "change_state" false}}>Edit</button>
                    {{else}}
                        <div class="row">
                            <div class="col-lg-10">
                                <button type="submit" class="btn btn-default btn-130 pull-right" {{action "open_modal" 'template.modals.select-item' this}}>Add Leg</button>
                            </div>
                            <div class="col-lg-2">
                                <button type="submit" class="btn btn-primary btn-130 pull-right"{{action "change_state" true this}}>Save</button>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        {{/if}}

    </div>
</div>
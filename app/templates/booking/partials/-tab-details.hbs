<div class="row" style="margin-top: 40px; margin-bottom: 25px; margin-left: 25px; margin-right: 25px">
    <div class="col-lg-12">
        <div class= "well well-lg" style="background-color: #FAFDFD">
    {{#if is_client}}
        {{partial "booking/partials/details/-client-body"}}
    {{else}}
        {{partial "booking/partials/details/-default-body"}}
    {{/if}}

        </div>

        {{#if is_client}}
            {{#if isRequest}}
                {{#if canEdit}}
                    <div class="row">
                        <h5 class="page-header"></h5>
                        <div class="col-lg-12">
                            {{#if isReqOrEdit}}
                                <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "update_details" this true}}>
                                    <span class="glyphicon glyphicon-ok"></span> Confirm
                                </button>
                            {{else}}
                                <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "update_details" this false}}>
                                    <span class="glyphicon glyphicon-ok"></span> Confirm
                                </button>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}

            {{/if}}
        {{else}}
            {{#unless isRegistOrPend}}
                {{#if canEdit}}
                    <div class="row">
                        <h5 class="page-header"></h5>
                        <div class="col-lg-12">
                            {{#if isReqOrEdit}}
                                <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "update_details" this true}}>
                                    <span class="glyphicon glyphicon-ok"></span> Confirm
                                </button>
                            {{else}}
                                <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "update_details" this false}}>
                                    <span class="glyphicon glyphicon-ok"></span> Confirm
                                </button>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
            {{/unless}}
        {{/if}}
    </div>
</div>
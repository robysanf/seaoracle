
    <div class="row">
        <div class="col-lg-12">
            <div class= "well well-lg" style="background-color: #FAFDFD">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header">New Loading List
                        </h3>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="alert alert-danger col-lg-12" style="display: none; ">
                        <p style="text-align: center"><strong>Attention:</strong> please check if required fields have been entered.</p>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-6">
                        <label>Voyage</label>
                        <!--<a id="autocomplete-voy">-->
                        {{select-2
                        content= app_controller.autocompleteVoyage
                        value= controller.searchVoyage
                        optionLabelPath="name"
                        placeholder="Choose a voyage"
                        typeaheadNoMatchesText="No voyage found for '%@'"
                        typeaheadErrorText="Loading failed: %@"
                        enabled=true
                        allowClear=true}}
                            {{!{{auto-complete source=app_controller.autocompleteVoyage destination=controller.searchVoyage searchPath="name" minChars=1}}
                        <!--</a>-->
                    </div>
                    <div class="col-lg-6">
                        <label>Code</label>
                        {{!{{#view App.CheckDocumentCodeView type='docLL' val=controller.name val1=false}}
                        <div class="form-group">
                            {{input type=text value= controller.name class='form-control'}}
                        </div>
                        {{!{{/view}}
                    </div>
                </div>
                <div class='row'>
                    <div class='col-lg-6'>
                        {{#if controller.searchVoyage}}
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><strong>Origin</strong></h3>
                                </div>
                                <ul class="list-group">
                                    {{#each leg in controller.searchVoyage.schedules itemController='document/doc-ll-origin-list'}}
                                        <li class="list-group-item">
                                            <div class='row'>
                                                <div class='col-lg-2'>
                                                    {{input type="checkbox" checked=isChecked}}
                                                </div>
                                                <div class='col-lg-5'>
                                                    {{leg.poi.name}}
                                                </div>
                                                <div class='col-lg-5'>
                                                    {{#if leg.atd}}
                                                        {{leg.atd}}
                                                    {{else}}
                                                        {{leg.etd}}
                                                    {{/if}}
                                                </div>
                                            </div>
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}
                    </div>
                    <div class='col-lg-6'>
                        {{#if controller.searchVoyage}}
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><strong>Destination</strong></h3>
                                </div>
                                <ul class="list-group">
                                    {{#each controller.searchVoyage.schedules itemController='document/doc-ll-destination-list'}}
                                        <li class="list-group-item">
                                            <div class='row'>
                                                <div class='col-lg-2'>
                                                    {{input type="checkbox" checked=isChecked}}
                                                </div>
                                                <div class='col-lg-5'>
                                                    {{this.poi.name}}
                                                </div>
                                                <div class='col-lg-5'>
                                                    {{#if this.atd}}
                                                        {{this.atd}}
                                                    {{else}}
                                                        {{this.etd}}
                                                    {{/if}}
                                                </div>
                                            </div>
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <h5 class="page-header"></h5>
                        {{#view 'loading-button' record='docLL' action_name='saveLL'}}
                            <button type="submit" id='button_save' data-loading-text="Saving..." class="btn btn-primary btn-130 pull-right">
                                Save
                            </button>
                        {{/view}}
                    </div>
                </div>
            </div>
        </div>
    </div>


<div class="row" style="margin-top: 45px">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class= "well well-lg" style="background-color: #FAFDFD">
            <div class="row" style="margin-top: 25px;margin-bottom: 15px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10"><h4><strong>Create new group</strong></h4></div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 20px">
                <div class="col-lg-1"></div>
                <div class="col-lg-4">
                    <label>Name</label>
                    {{input type=text value= newGorup class='form-control'}}
                </div>
                <div class="col-lg-4">
                    <label>Type</label>
                    {{input type=text value= newType class='form-control'}}
                </div>
                <div class="col-lg-2" style="margin-top: 25px" >
                    <button class="btn btn-primary btn-130 pull-right" {{action "create_group" this newGorup newType}}>Save</button>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-1"></div>
</div>

<div class="row" style="margin-top: 25px">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        {{#each group in groups}}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <strong>{{group.name}}</strong>
                        <span class="pull-right">
                            <strong>Type: </strong> {{group.type}}
                        </span>
                    </h3>
                </div>
                <div class="panel-body">

                </div>
            </div>
        {{/each}}
    </div>
</div>


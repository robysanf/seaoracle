<div class="row" style="margin-top: 40px; margin-bottom: 25px; margin-left: 25px;">
    <div class="col-lg-12">
        <div class="row" style="margin-bottom: 15px;">
            <div class="col-lg-3"><h4>Name</h4></div>
            <div class="col-lg-7">
                <div class="input-group input-group">
                    {{input value= name placeholder='Enter name' class='form-control' disabled= controller.isView}}
                    <span class="input-group-addon " id="1">
                        <span class="glyphicon glyphicon-asterisk"></span>
                    </span>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><h4>Type</h4></div>
            <div class="col-lg-7">
                <div class="form-group">
                    {{input value= type placeholder='Enter type' class='form-control' disabled= controller.isView}}
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><h4>Value</h4></div>
            <div class="col-lg-7">
                <div class="form-group">
                    {{input value= value placeholder='Enter value' class='form-control' disabled= controller.isView}}
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><h4>Content</h4></div>
            <div class="col-lg-7">
                <div class="form-group">
                    {{textarea cols="80" rows="10" value=description placeholder='Enter content' class='form-control' disabled= controller.isView}}
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><h4>Cargo Manifest</h4></div>
            <div class="col-lg-7">
                {{#if controller.isView}}
                    <label class="form-control" style="text-align: left">{{input type="checkbox" checked=isDocCM disabled=true}}</label>
                {{else}}
                    <label class="form-control" style="text-align: left">{{input type="checkbox" checked=isDocCM}}</label>
                {{/if}}
            </div>
            <div class="col-lg-2"></div>
        </div>

        {{#if canEdit}}
            <div class="row">
                <div class="col-lg-10">
                    <h5 class="page-header"></h5>
                    {{#if controller.isView}}
                        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "change_state" false}}>Edit</button>
                    {{else}}
                        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "change_state" true this}}>Save</button>
                    {{/if}}
                </div>
                <div class="col-lg-2"></div>
            </div>
        {{/if}}

    </div>
</div>
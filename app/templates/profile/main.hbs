<div class="row">
    <div class="col-lg-3">
        <div class= "well well-lg" style="background-color: #FAFDFD">
            <p class="lead"><h3>{{full_name}}</h3></p>
            <p><h5>Username: <b>{{username}}</b></h5></p>
        </div>
    </div>
    <div class="col-lg-9">
        <ul class="nav nav-tabs" style="margin-bottom: 15px;">
            <li class="active"><h3>Details</h3></li>
        </ul>
        <div class="tab-content"  style="margin-bottom: 25px">
            <div class="tab-pane fade active in">
                <div class="row"  style="margin-top: 25px">
                    <div class="col-lg-3"><h4>First name</h4></div>
                    <div class="col-lg-9">
                        <div class="form-group">{{input value= firstName class='form-control' disabled = controller.is_viewMode}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3"><h4>Last name</h4></div>
                    <div class="col-lg-9">
                        <div class="form-group">{{input value= lastName class='form-control' disabled=is_viewMode}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3"><h4>Date of Birth</h4></div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            {{#if is_viewMode}}
                                {{input value= birthDate class='form-control' disabled=true}}
                            {{else}}
                                {{date-picker-custom controls="datepicker_birthDate" value=birthDate placeholder='YYYY-MM-DD' dateFormat="YYYY-MM-DD"}}
                                {{date-picker-controls id="datepicker_birthDate" maxYear="+50" minYear="-10"}}
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <h5 class="page-header"></h5>
                </div>
                <div class="row">
                    <div class="col-lg-3"><h4>E-mail</h4></div>
                    <div class="col-lg-9">
                        <div class="form-group">{{input value= email class='form-control' disabled=is_viewMode}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3"><h4>Phone</h4></div>
                    <div class="col-lg-9">
                        <div class="form-group">{{input value= phone class='form-control' disabled=is_viewMode}}</div>
                    </div>
                </div>
                {{#if canEdit}}
                    <div class="row">
                        <div class="col-lg-12">
                            <h5 class="page-header"></h5>
                            {{#if is_viewMode}}
                                <button type="submit" class="btn btn-primary pull-right btn-130" {{action 'manager_user' null 'changeMode_edit'}}>Edit</button>
                            {{else}}
                                {{#view 'standby-button' id="form-submit" class="btn btn-primary ladda-button btn-130 pull-right" data-style="expand-left" action_name='manager_user' arg1='put' arg2=null}}
                                    <span class="ladda-label">Save</span>
                                {{/view}}
                                <!--<button type="submit" class="btn btn-primary pull-right btn-130" {{!{{action 'manager_user' 'put'}}>Save</button>-->
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>



<div class="modal-header">
    <button type="button" class="close" {{action close 'overview' 'application' target="view"}}>&times;</button>
    <h3>Grants manager for {{controller.userRecord.name}}</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="btn-group btn-group-justified" data-toggle="buttons">
                <label class="btn btn-primary" {{action "set_grantsTypology" 'D' 'user'}}>
                    <input type="radio" name="options" id="Client"> Clear All
                </label>
                <label class="btn btn-default" {{action "set_grantsTypology" 'A' 'user'}}>
                    <input type="radio" name="options" id="Agency"> Agency
                </label>
                <label class="btn btn-default" {{action "set_grantsTypology" 'S' 'user'}}>
                    <input type="radio" name="options" id="Shipowner"> Shipowner
                </label>
                <label class="btn btn-default" {{action "set_grantsTypology" 'C' 'user'}}>
                    <input type="radio" name="options" id="Client"> Client
                </label>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 15px">
        <div class="col-lg-12">
            <ul class="list-group">
                <!--
                checkboxValues: selezione dei grants definita a livello di controller (App.CompaniesCompanyViewsCompanyUsersListsCompanyUserAddController)
                -->
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                    <tr style="border-bottom: 2px solid #000000;">
                        <th width="40%">Grant</th>
                        <th width="15%">New</th>
                        <th width="15%">View</th>
                        <th width="15%">Edit</th>
                        <th width="15%">Remove</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each grant in controller.userRecord.grants}}
                        {{#if grant.isAccess}}
                            <tr>
                                <td>{{grant.name}}</td>
                                <td><span >{{view Ember.Select content=controller.grantsList value=grant.accessNew class='form-control'}}</span></td>
                                <td><span >{{view Ember.Select content=controller.grantsList value=grant.accessView class='form-control'}}</span></td>
                                <td><span >{{view Ember.Select content=controller.grantsList value=grant.accessEdit class='form-control'}}</span></td>
                                <td><span >{{view Ember.Select content=controller.grantsList value=grant.accessEdit class='form-control'}}</span></td>
                            </tr>
                        {{/if}}
                    {{/each}}
                    </tbody>
                </table>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h5 class="page-header"></h5>
        </div>
    </div>
    {{#each grant in controller.userRecord.grants}}
        {{#if grant.isPermission}}
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class="input-group">
                              <span class="input-group-addon">
                                  {{input type = "checkbox" checked=grant.ckPermission}}
                              </span>
                        <label class="form-control" >{{grant.name}}</label>
                    </div><!-- /input-group -->
                </div>
                <div class="col-lg-1"></div>
            </div>
            <br>
        {{/if}}
    {{/each}}
</div>
<div class="modal-footer">
    <a href="#" class="btn" {{action update_grants this 'user' target="view"}}>Save</a>
    <a href="#" class="btn" {{action close 'overview' 'application' target="view"}}>Close</a>
</div>
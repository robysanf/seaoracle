{{#if app_controller.searchResults}}
    <div class="row"><div class="col-lg-12"><h3 class="page-header">Search results:</h3><br></div></div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Value</th>
                    <th>Edit</th>
                    {{#if controller.user_record.stamp_remove}}
                        <th>Remove</th>
                    {{else}}
                        <th></th>
                    {{/if}}

                </tr>
                </thead>
                <tbody>
                {{#each stamp in app_controller.searchResults}}
                    <tr>
                        <td>{{stamp.name}}</td>
                        <td>{{stamp.type}}</td>
                        <td>{{stamp.value}}</td>

                        <td>{{#link-to 'stamp/main' stamp.id}}<span class="glyphicon glyphicon-list-alt"></span>{{/link-to}}</td>
                        {{#if stamp.canRemove}}
                            <td><a href="#" {{action "open_modal" 'stamp.modals.remove-stamp' stamp}}><span class="glyphicon glyphicon-remove"></span></a></td>
                        {{else}}
                            <td></td>
                        {{/if}}
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{else}}

{{/if}}

<!--   infinite scroll  -->
{{#if app_controller.loadingMore}}
    <div class="alert alert-info"><p style="text-align: center"><strong>Loading more...</strong></p></div>
{{/if}}
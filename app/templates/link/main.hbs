<div class="container">
    <div class="row" style="margin-top: 70px">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class= "well well-lg" style="background-color: #FAFDFD">
                        <div class="row">
                            <div class="col-lg-6">
                                <p class="lead">Connected companies</p>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 25px; margin-bottom: 25px">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-5">
                                <a id="autocomplete-company">
                                    {{auto-complete source=app_controller.autocompleteCompany destination=controller.searchCompany searchPath="name" minChars=0}}
                                </a>
                            </div>
                            <div class="col-lg-5">
                                <button class="btn btn-default btn-130" {{action "open_modal" 'link.modals.company-view' controller.searchCompany}}>View</button>
                                <button class="btn btn-primary btn-130 pull-right" {{action "custom_linkCompanies" controller.searchCompany.id}}>Connect</button>
                            </div>
                            <div class="col-lg-1"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    </div>

    {{#if links}}
        <div class="row" style="margin-top: 25px">
            <div class="col-lg-12">
                <table class="table table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>VAT registration number</th>
                        <th>Preview</th>
                        <th>Go to</th>
                        {{#if app_controller.user_record.company_remove}}
                            <th>Remove</th>
                        {{else}}
                            <th></th>
                        {{/if}}
                    </tr>
                    </thead>
                    <tbody>

                    {{#each link in links}}
                        <tr>
                            <td>{{link.name}}</td>
                            <td>{{link.vat}}</td>
                            <td><a href="#" {{action "open_modal" 'link.modals.company-view' link}}><span class="glyphicon glyphicon-eye-open"></span></a></td>
                            <td><a href="#" {{action "getId" 'company/main' link}}><span class="glyphicon glyphicon-share-alt" ></span></a></td>
                            {{#if link.canRemove}}
                                <td><a href="#"><span class="glyphicon glyphicon-remove" {{action "open_modal" 'link.modals.company-remove' link}}></span></a></td>
                            {{else}}
                                <td></td>
                            {{/if}}
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    {{else}}
        <div class="row" style="margin-top: 25px">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <div class="well well-lg" style="background-color: #FAFDFD">
                    <h4 class="page-body">There are not connected companies.</h4>
                </div>
            </div>
            <div class="col-lg-1"></div>
        </div>
    {{/if}}
</div>


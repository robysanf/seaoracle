<div class="modal-header">
    <button type="button" class="close" {{action close 'overview' 'application' target="view"}}>&times;</button>
    <h3>Template details</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-3"><h4>Name</h4></div>
        <div class="col-lg-7">
            <div class="form-group">{{input value= controller.template_record.name class='form-control' disabled="disabled"}}</div>
        </div>
        <div class="col-lg-2"></div>
    </div>
    <div class="row">
        <div class="col-lg-3"><h4>Company</h4></div>
        <div class="col-lg-7">
            <div class="form-group">{{input value= controller.template_record.company.name class='form-control' disabled="disabled"}}</div>
        </div>
        <div class="col-lg-2"></div>
    </div>
    <div class="row">
        <div class="col-lg-3"><h4>Path</h4></div>
        {{#each poi in controller.template_record.paths}}
            <div class="col-lg-3"><h4></h4></div>
            <div class="col-lg-7">
                <div class="form-group">
                    {{input value= poi.name class='form-control' disabled="disabled"}}
                </div>
            </div>
        {{/each}}
        <div class="col-lg-2"></div>
    </div>
</div>
<div class="modal-footer">
    <a href="#" class="btn" {{action close 'overview' 'application' target="view"}}>Close</a>
</div>
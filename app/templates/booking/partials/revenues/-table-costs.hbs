
<div class="row" style="margin-top: 25px">
    <div class="col-lg-12">
        <table class="table table-condensed">
            <thead>
            <tr>
                <th style="width: 15%">Service</th>
                <th style="width: 20%">Bill to</th>
                <th style="width: 15%">Costs</th>
                <th style="width: 15%"></th>
                <th style="width: 15%">{{#if controller.revenuesTabList.bookingCharges}} Quantity {{else}} PER {{/if}}</th>
                <th style="width: 15%"></th>
                <th style="width: 5%">{{#unless isRegister}} Remove {{/unless}}</th>
            </tr>
            </thead>
            <tbody>
            {{#each chargeItem in chargeItems }}
                {{#if chargeItem.is_chargeType_cost}}   <!--se sono charge-item di tipo COST-->

                    {{#if controller.revenuesTabList.bookingCharges}}  <!--se sono nei booking charge-->
                        {{#if chargeItem.isTypeNone}}
                            {{partial "booking/partials/revenues/-body-table-costs"}}
                        {{/if}}
                    {{else}}
                        {{#unless chargeItem.is_entityType_item}}      <!--se l'itemCharge Ã¨ di tipo booking-->
                            {{#if controller.revenuesTabList.containerCharges}}
                                {{#if chargeItem.isTypeContainer}}
                                    {{partial "booking/partials/revenues/-body-table-costs"}}
                                {{/if}}
                            {{/if}}
                            {{#if controller.revenuesTabList.roroCharges}}
                                {{#if chargeItem.isTypeRoRo}}
                                    {{partial "booking/partials/revenues/-body-table-costs"}}
                                {{/if}}
                            {{/if}}
                            {{#if controller.revenuesTabList.bbCharges}}
                                {{#if chargeItem.isTypeBB}}
                                    {{partial "booking/partials/revenues/-body-table-costs"}}
                                {{/if}}
                            {{/if}}
                        {{/unless}}
                    {{/if}}

                {{/if}}
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
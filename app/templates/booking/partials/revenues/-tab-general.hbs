<div class="row" style="margin-top: 25px; margin-bottom: 25px">
    <div class="col-lg-12">
        <div class="alert alert-info">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <br style="line-height:25px">
                    {{#if isRegister}}
                        {{#if isPP}}
                            <label class="form-control"  style="text-align: center">PREPAID</label>
                        {{else}}
                            <label class="form-control" style="text-align: center">COLLECT</label>
                        {{/if}}
                    {{else}}
                        {{#if isPP}}
                            <div class="btn-group  btn-group-justified" data-toggle="buttons">
                                <label class="btn btn-default" {{action "changeModeType" "COLL" this}}>
                                    {{input type="radio" name="options"}} COLLECT
                                </label>
                                <label class="btn btn-default active" >
                                    {{input type="radio" name="options"}} PREPAID
                                </label>
                            </div>
                        {{else}}
                            <div class="btn-group  btn-group-justified" data-toggle="buttons" >
                                <label class="btn btn-default active">
                                    {{input type="radio" name="options"}} COLLECT
                                </label>
                                <label class="btn btn-default" {{action "changeModeType" "PP" this}}>
                                    {{input type="radio" name="options"}} PREPAID
                                </label>
                            </div>
                        {{/if}}
                    {{/if}}
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        {{#unless isRegister}}
            <div class="alert alert-info">
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-5">
                        <label>Charge: </label>
                        <a id="autocomplete-charge">
                            <!--FIXME: autoCompleteCharge viene settato nella funzione "selectTab"-->
                            {{auto-complete source=app_controller.autocompleteCharge destination= controller.searchApplyCharge searchPath="name" minChars=0}}
                        </a>
                    </div>
                    <div class="col-lg-5">
                        <label>Change rate: </label>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">{{currency}}</span>
                                <span class="input-group-addon">-</span>
                                <span class="input-group-addon">{{controller.searchApplyCharge.currency}}</span>
                                {{input type="number" class="form-control" value=changeRate disabled= isRegister}}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1"></div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-10">
                        {{#unless controller.is_shipowner}}
                            <button type="button" style="text-align: left" class="btn btn-primary btn-130 pull-right" {{action 'update_applyCharge' this}}>
                                Apply Charge
                            </button>
                        {{/unless}}
                    </div>
                    <div class="col-lg-1"></div>
                </div>
            </div>
        {{/unless}}
    </div>
</div>

{{#unless isRegister}}
    {{#unless controller.is_shipowner}}
        <div class="row" style="margin-bottom: 25px">
            <h5 class="page-header"></h5>
            <div class="col-lg-12">
                {{#view 'standby-button' id="form-submit" class="btn btn-primary ladda-button btn-130 pull-right" data-style="expand-left" action_name='update_general' arg1='bookingCharges' arg2=id}}
                    <span class="ladda-label">Confirm</span>
                {{/view}}
            </div>
        </div>
    {{/unless}}
{{/unless}}
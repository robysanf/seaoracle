{{#if users}}
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>View</th>
                    {{#if app_controller.user_record.user_edit}}
                        <th>Edit</th>
                    {{else}}
                        <th></th>
                    {{/if}}
                    {{#if app_controller.user_record.user_remove}}
                        <th>Remove</th>
                    {{else}}
                        <th></th>
                    {{/if}}

                </tr>
                </thead>
                <tbody>
                {{#each user in users}}
                    <tr>
                        <td>{{{user.firstName}}}</td>
                        <td>{{{user.lastName}}}</td>
                        <!-- path: app > views > selectItemView -->
                        <td><a href="#" {{action "open_modal" 'company.modals.user-view' user 'user'}}><span class="glyphicon glyphicon-list-alt"></span></a></td>
                        {{#if user.canEdit}}
                            <td><a href='#' {{action 'edit_record' user true}}><span class="glyphicon glyphicon-pencil"></span></a></td>
                        {{else}}
                            <td></td>
                        {{/if}}
                        {{#if user.canRemove}}
                            <td><a href="#" {{action "open_modal" 'company.modals.user-remove' user 'user'}}><span class="glyphicon glyphicon-remove"></span></a></td>
                        {{else}}
                            <td></td>
                        {{/if}}
                    </tr>
                {{/each}}
                </tbody>
            </table>

        </div>
    </div>
{{else}}
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <div class="jumbotron">
                <div class="row">
                    <a href="#" {{action 'goTo' true}}>
                        <h1 style="text-align: center" >Add user</h1>
                    </a>
                </div>
            </div>
        </div>
    </div>
{{/if}}
<!-- ADMIN -->
{{#if controller.is_admin}}
    <h5 class="page-header"></h5>
    <div class="row">
        <div class="col-lg-12">
            <button type="button" style="text-align: left" class="btn btn-default btn-group-justified" {{action "changeState_and_share" this "edit" client 'lock'}}>
                <span class="glyphicon glyphlink glyphicon-fast-backward" ></span> Unlock
            </button>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <button type="button" style="text-align: left" class="btn btn-info btn-group-justified" {{action "changeState" "register" this}}>
                <span class="glyphicon glyphlink glyphicon-folder-close"  style="color: aliceblue"></span> Register
            </button>
        </div>
    </div>
    {{#if app_controller.user_record.booking_remove}}
        <br>
        <div class="row">
            <div class="col-lg-12">
                <button type="button" style="text-align: left" class="btn btn-danger btn-group-justified" {{action "open_modal" 'booking.modals.new-bill-of-lading' this}}>
                    <span class="glyphicon glyphlink glyphicon-remove"  style="color: aliceblue"></span> Delete
                </button>
            </div>
        </div>
    {{/if}}

    {{#unless isDocBL}}
        <h5 class="page-header"></h5>
        <div class="row">
            <div class="col-lg-12">
                <button class="btn btn-primary btn-small btn-group-justified pull-right"{{action "open_modal" 'booking.modals.new-bill-of-lading' this}}>Bill of Lading</button>
            </div>
        </div>
    {{/unless}}
{{/if}}

<!-- AGENCIES -->
{{#if controller.is_agency}}
    {{#unless isDocBL}}
        <div class="row">
            <div class="col-lg-12">
                <button class="btn btn-primary btn-small btn-group-justified pull-right" {{action "open_modal" 'booking.modals.new-bill-of-lading' this}}>Bill of Lading</button>
            </div>
        </div>
    {{/unless}}
{{/if}}


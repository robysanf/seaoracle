{{#if chargeItems}}
    <table class="table table-hover table-condensed">
        <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Default revenue</th>
            <th>Currency revenue</th>
            <th>Edit</th>
            {{#if app_controller.user_record.charge_remove}}
                <th>Remove</th>
            {{else}}
                <th></th>
            {{/if}}
        </tr>
        </thead>
        <tbody>
        {{#each chargeItem in chargeItems}}
            {{#if is_chargeItems_book}}
                {{#if chargeItem.isTypeNone}}
                    <tr>
                        <td>{{chargeItem.name}}</td>
                        <td>{{chargeItem.code}}</td>
                        <td>{{chargeItem.originalRevenue}}</td>
                        <td>{{chargeItem.originalRevenueCurrency}}</td>

                        <td><a href='#' {{action 'change_partial' 'itemEditActive' true chargeItem}}><span class="glyphicon glyphicon-pencil"></span></a></td>
                        {{#if chargeItem.canRemove}}
                            <td><a href="#" {{action "open_modal" 'charge.modals.remove-record' chargeItem 'chargeItem'}}><span class="glyphicon glyphicon-remove"></span></a></td>
                        {{else}}
                            <td></td>
                        {{/if}}
                    </tr>
                {{/if}}
            {{/if}}
            {{#if is_chargeItems_cont}}

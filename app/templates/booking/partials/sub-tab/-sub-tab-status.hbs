{{#each freightEquipment in controller.item_record.freightEquipments}}
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-1">
                    {{#unless isRegister}}
                        {{#view 'button-disabled-on-click' class="btn btn-sm btn-default" disabled=false action = 'progressBar_removeState' arg1 = freightEquipment arg3 = controller.item_record}}<span class="glyphicon glyphicon-chevron-left"></span>{{/view}}
                        <!--<a href="#" {{!{{action "progressBar_removeState" freightEquipment controller.item_record }}><span class="glyphicon glyphicon-chevron-left"></span></a>-->
                    {{/unless}}
                </div>
                <div class="col-lg-10">
                    <div class="progress" style="height: 30px;">
                        {{#if freightEquipment.isAvailableInTerminal}}
                            <div class="progress-bar" style="width: 30%; background-color: #5bc0de">
                                <strong>Available in Terminal</strong>
                            </div>
                        {{/if}}
                        {{#if controller.item_record.tu_container}}
                            {{#if freightEquipment.isStuffing}}
                                <div class="progress-bar" style="width: 40%; background-color: #5bc0de">
                                    <strong>Stuffing</strong>
                                </div>
                            {{/if}}
                        {{/if}}
                        {{#if freightEquipment.isReadyToEmbark}}
                            <div class="progress-bar" style="width: 50%; background-color: #5bc0de">
                                <strong>Ready to Embark</strong>
                            </div>
                        {{/if}}
                        {{#if freightEquipment.isOnBoard}}
                            <div class="progress-bar" style="width: 60%; background-color: #5bc0de">
                                <strong>On board</strong>
                            </div>
                        {{/if}}
                        {{#if freightEquipment.isDischarged}}
                            <div class="progress-bar" style="width: 70%; background-color: #5bc0de">
                                <strong>Discharged</strong>
                            </div>
                        {{/if}}
                        {{#if controller.item_record.tu_container}}
                            {{#if freightEquipment.isLadenInTerminal}}
                                <div class="progress-bar" style="width: 80%; background-color: #5bc0de">
                                    <strong>Laden in Terminal</strong>
                                </div>
                            {{/if}}
                        {{/if}}
                        {{#if freightEquipment.isDeliveredToReceiver}}
                            <div class="progress-bar " style="width: 100%; background-color: #3090C7">
                                <strong>Delivered to Receiver</strong>
                            </div>
                        {{/if}}

                    </div>
                </div>
                <div class="col-lg-1">
                    {{#unless isRegister}}
                        {{#view 'button-disabled-on-click' class="btn btn-sm btn-default" disabled=false action = 'progressBar_changeState' arg1 = freightEquipment arg3 = controller.item_record}}<span class="glyphicon glyphicon-chevron-right"></span>{{/view}}
                        <!--<a href="#" {{!{{action "progressBar_changeState" freightEquipment controller.item_record}}><span class="glyphicon glyphicon-chevron-right"></span></a>-->
                    {{/unless}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-condensed">
                                <thead>
                                <tr style="border-bottom: 2px solid #000000;">
                                    <th style="width: 50%">Status</th>
                                    <th style="width: 20%">From</th>
                                    <th style="width: 20%">To</th>
                                </tr>
                                </thead>
                                <tbody>

                                {{#each equipmentStatus in freightEquipment.orderedEquipmentStatuses}}
                                    <tr>
                                        <td><label class='form-control' >{{equipmentStatus.status}}</label></td>
                                        {{#if isRegister}}
                                            <td>{{input type="date" value=equipmentStatus.from class='form-control' disabled="true"}}</td>
                                            <td>{{input type="date" value=equipmentStatus.to class='form-control' disabled="true"}}</td>
                                        {{else}}
                                            <td>
                                                {{!{{date-picker-custom controls=equipmentStatus.fromId value=equipmentStatus.from placeholder='YYYY-MM-DD' dateFormat="YYYY-MM-DD"}}
                                                {{!{{date-picker-controls id=equipmentStatus.fromId maxYear="+50" minYear="-10"}}
                                                {{input type="date" value=equipmentStatus.from class='form-control'}}
                                            </td>
                                            <td>
                                                {{!{{date-picker-custom controls=equipmentStatus.toId value=equipmentStatus.to placeholder='YYYY-MM-DD' dateFormat="YYYY-MM-DD"}}
                                                {{!{{date-picker-controls id=equipmentStatus.toId maxYear="+50" minYear="-10"}}
                                                {{input type="date" value=equipmentStatus.to class='form-control'}}
                                            </td>
                                        {{/if}}
                                    </tr>
                                {{/each}}
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="col-lg-1"></div>
    </div>
{{/each}}
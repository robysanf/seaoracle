    <div class="row">
        <div class="col-lg-12">
            <button type="button" style="text-align: left" class="btn btn-info btn-group-justified" {{action "changeState_and_share" id "request" agency 'pending'}}>  <!-- argomenti della funzione: booking id, stateTo, companyToShare, stateFrom-->

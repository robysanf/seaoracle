{{#if app_controller.searchResults}}
    <div class="row"><div class="col-lg-12"><h3 class="page-header">Search results:</h3><br></div></div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Segment</th>
                    <th>Edit</th>
                    <th>Remove</th>
                </tr>
                </thead>
                <tbody>
                {{#each charge in app_controller.searchResults}}
                    <tr>
                        <td>{{charge.name}}</td>
                        <td>{{charge.segment.name}}</td>
                        <td><a href="#" {{action 'transition_to_record' 'charge/main' charge}}><span class="glyphicon glyphicon-list-alt" ></span></a></td>
                        <td><a href="#" {{action "open_modal" 'charge.modals.remove-record' charge}}><span class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{else}}

{{/if}}

<!--   infinite scroll  -->
{{#if app_controller.loadingMore}}
    <div class="alert alert-info"><p style="text-align: center"><strong>Loading more...</strong></p></div>
{{/if}}
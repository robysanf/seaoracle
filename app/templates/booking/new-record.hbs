<div class="row">
    <div class="col-lg-2">
        <div class= "well well-lg" style="background-color: #FAFDFD">
            <p class="lead">
            <h3>New Booking
            {{#if controller.is_client}}
                Request
            {{/if}}
            </h3>
        </div>
    </div>
    <div class="col-lg-10">
        <ul class="nav nav-tabs" style="margin-bottom: 15px;">
            <li class='active'>
                <a href="#" data-tab="details"><h4>Details</h4></a>
            </li>
            {{#unless controller.is_client}}     <!--se sono in modalità booking request queste tab non le vedo-->
                <li class="disabled">
                    <a data-tab="freightPlan"><h4>Freight Plan</h4></a>
                </li>
            {{/unless}}
            <li class="disabled">
                <a data-tab="container"><h4>Container</h4></a>
            </li>
            <li class="disabled">
                <a data-tab="roro"><h4>Ro/Ro</h4></a>
            </li>
            <li class="disabled">
                <a data-tab="bb"><h4>Break Bulks</h4></a>
            </li>
            {{#unless controller.is_client}}     <!--se sono in modalità booking request queste tab non le vedo-->
                <li class="disabled">
                    <a data-tab="revenues"><h4>Revenues</h4></a>
                </li>
                <li class="disabled">
                    <a data-tab="itemStatus"><h4>Item Status</h4></a>
                </li>
                <li class="disabled">
                    <a data-tab="files"><h4>Files</h4></a>
                </li>
            {{/unless}}
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade active in">
                <div class="row" style="margin-top: 25px;margin-bottom: 25px">
                    <div class="col-lg-12">
                        <div class= "well well-lg" style="background-color: #FAFDFD">
                            {{partial "booking/partials/-new-booking"}}
                            <br>
                            <div class="row">
                                <h5 class="page-header"></h5>
                                <div class="col-lg-8">
                                    <button class="btn btn-default btn-130 pull-left" {{action "cancel"}}>
                                        Cancel
                                    </button>
                                </div>
                                {{#if controller.is_admin}}
                                    <div class="col-lg-2">
                                        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "save" 'request'}}>
                                            <span class="glyphicon glyphicon-ok"></span> Confirm Req.
                                        </button>
                                    </div>
                                    <div class="col-lg-2">
                                        <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "save" 'edit'}}>
                                            <span class="glyphicon glyphicon-ok"></span> Confirm
                                        </button>
                                    </div>
                                {{else}}
                                    {{#if controller.is_client}}
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-2">
                                            <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "save" 'request'}}>
                                                <span class="glyphicon glyphicon-ok"></span> Confirm Req.
                                            </button>
                                        </div>
                                    {{else}}
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-2">
                                            <button type="submit" class="btn btn-primary btn-130 pull-right" {{action "save" 'edit'}}>
                                                <span class="glyphicon glyphicon-ok"></span> Confirm
                                            </button>
                                        </div>
                                    {{/if}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



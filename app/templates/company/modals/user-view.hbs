<div class="modal-header">
    <button type="button" class="close" {{action close 'overview' 'application' target="view"}}>&times;</button>
    <h3>User view</h3>
</div>
<div class="modal-body">
            <div class="row">
                <div class="col-lg-3"><h4>First name</h4></div>
                <div class="col-lg-7">
                    <div class="form-group">{{input value= controller.userRecord.firstName class='form-control' disabled="disabled"}}</div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <div class="col-lg-3"><h4>Last name</h4></div>
                <div class="col-lg-7">
                    <div class="form-group">{{input value= controller.userRecord.lastName class='form-control' disabled="disabled"}}</div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <div class="col-lg-3"><h4>Date of Birth</h4></div>
                <div class="col-lg-7">
                    <div class="form-group">{{input value= controller.userRecord.birthDate type="date" class='form-control' disabled="disabled"}}</div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <div class="col-lg-3"><h4>Username</h4></div>
                <div class="col-lg-7">
                    <div class="form-group">{{input value= controller.userRecord.username class='form-control' disabled="disabled"}}</div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <div class="col-lg-3"><h4>Password</h4></div>
                <div class="col-lg-7">
                    <div class="form-group">
                        {{input value= controller.userRecord.password type="password" class='form-control'  disabled="disabled"}}
                    </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <h5 class="page-header"></h5>
            </div>
            <div class="row">
                <div class="col-lg-3"><h4>E-mail</h4></div>
                <div class="col-lg-7">
                    <div class="form-group">{{input value= controller.userRecord.email class='form-control' disabled="disabled"}}</div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <div class="col-lg-3"><h4>Phone</h4></div>
                <div class="col-lg-7">
                    <div class="form-group">{{input value= controller.userRecord.phone class='form-control' disabled="disabled"}}</div>
                </div>
                <div class="col-lg-2"></div>
            </div>
</div>
<div class="modal-footer">
    <a href="#" class="btn" {{action close 'overview' 'application' target="view"}}>Close</a>
</div>
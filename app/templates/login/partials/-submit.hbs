<div class="row" style="margin-top: 100px">
    <!--<div class="col-lg-3"></div>-->
    <div class="col-lg-12">
        {{#if appController.authToken}}
        {{else}}
            {{#if loggedIn}}
                <p> You are already logged in! </p>
            {{else}}
                <!--<div class="row">-->
                <!--<h2 style="color: #f5f5f5; text-align: center" ><strong> Please sign in </strong> </h2>-->

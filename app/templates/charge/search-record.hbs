<div class="container">
    <div class="row" style="margin-top: 70px">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class= "well well-lg" style="background-color: #FAFDFD">
                        <div class="row">
                            <div class="col-lg-6">
                                <p class="lead">Charge Search</p>
                            </div>
                            <div class="col-lg-6">
                                {{#view "search"}}
                                    <button type="button" class="btn btn-primary btn-130 pull-right">
                                        <span class="glyphicon glyphbutton glyphicon-search"></span> Search
                                    </button>
                                {{/view}}
                            </div>
                        </div>
                        <div class="row" style="margin-top: 25px; margin-bottom: 15px">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-5">
                                <label>Name</label>
                                {{input value= controller.searchCharge class='form-control'}}
                            </div>
                            <div class="col-lg-5">
                                <label>Company</label>
                                <!--<a id="autocomplete-company">-->
                                {{select-2
                                content= app_controller.autocompleteCompany
                                value= controller.searchCompany
                                optionLabelPath="name"
                                placeholder="Choose a route"
                                typeaheadNoMatchesText="No route found for '%@'"
                                typeaheadErrorText="Loading failed: %@"
                                enabled=true
                                allowClear=true}}
                                    {{!{{auto-complete source=app_controller.autocompleteCompany destination=controller.searchCompany searchPath="name" minChars=1}}
                                <!--</a>-->
                            </div>
                            <div class="col-lg-1"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    </div>
</div>

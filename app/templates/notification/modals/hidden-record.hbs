<div class="modal-header">
    <button type="button" class="close" {{action close 'overview' 'application' target="view"}}>&times;</button>
    <h3>Hidden Notifications</h3>
</div>
<div class="modal-body">
    <div class="row" style="margin-top: 20px">
        <div class="col-lg-12">
            <!--<button class="btn btn-default btn-130 pull-right" {{!{{action "post_notification" this}}>Edit grants</button>-->
            {{#if hiddenNotifications}}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th style="width:20%">Notification</th>
                        <th style="width:10%">Date</th>
                        <th style="width:10%">From</th>
                        <th style="width:50%">Description</th>
                        <th style="width:10%">Resume</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each notification in notifications}}
                        {{#if notification.hide_notification}}
                            <tr>
                                <td>{{notification.type}}</td>
                                <td>{{notification.date}}</td>
                                <td>{{notification.fromCompanyDetail}}</td>
                                <td>{{notification.description}}</td>
                                <td> <a href="#"><span class="glyphicon glyphicon-eye-open" style="text-align: center" {{action "change_state" notification 'status' 'show'}}></span></a></td>
                            </tr>
                        {{/if}}
                    {{/each}}
                    </tbody>
                </table>
            {{else}}
                <h4>There are no hidden notifications.</h4>
            {{/if}}
        </div>
    </div>
</div>
<div class="modal-footer">
    <a href="#" class="btn" {{action close 'overview' 'application' target="view"}}>Close</a>
</div>